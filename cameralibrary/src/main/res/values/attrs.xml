<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="main.tabLayout" format="reference" /> <!-- 首页的底部的tabLayout样式 -->
    <attr name="toolbar.zhongjh" format="reference" />
    <attr name="album.element.color" format="reference|color" /> <!-- title文本颜色 -->
    <attr name="bottomToolbar.bg" format="reference|color" /> <!-- 底部背景颜色 -->
    <attr name="bottomToolbar.preview.textColor" format="reference|color" /> <!-- 预览文本颜色 -->
    <attr name="bottomToolbar.apply.textColor" format="reference|color" /> <!-- 同意文本颜色 -->
    <attr name="album.emptyView" format="reference" /> <!-- 还没有图片或视频 -->
    <attr name="album.emptyView.textColor" format="reference|color" /> <!-- 还没有图片或视频 -->
    <attr name="album.dropdown.title.color" format="reference|color" />
    <attr name="album.dropdown.count.color" format="reference|color" />
    <attr name="album.listPopupWindowStyle" format="reference" /> <!-- 专辑下拉选项框的样式 -->
    <attr name="page.bg" format="reference|color" />
    <attr name="preview.bottomToolbar.back.textColor" format="reference|color" />
    <attr name="preview.bottomToolbar.apply.textColor" format="reference|color" />
    <attr name="item.placeholder" format="reference|color" />
    <attr name="item.checkCircle.backgroundColor" format="reference|color" />
    <attr name="item.checkCircle.borderColor" format="reference|color" />
    <attr name="capture.textColor" format="reference|color" />
    <!-- region 点击或者长按的按钮样式，用于拍照、录像 -->
    <attr name="click.long.button.round.border" format="reference|color" /> <!-- 外圆的颜色 -->
    <attr name="click.long.button.inner.circle.no.operation" format="reference|color" /> <!-- 内圆的未录制时颜色 -->
    <attr name="click.long.button.inner.circle.in.operation" format="reference|color" /> <!-- 内圆的录制中时颜色 -->
    <attr name="click.button.inner.circle.in.operation.interval" format="reference|color" /> <!-- 外圈的分段录制间隔 -->
    <!-- endregion -->

    <!-- region 展示视频界面的样式 -->
    <attr name="preview.video.button.confirm.text.color" format="reference|color" /> <!-- 提交按钮的文字的颜色 -->
    <attr name="preview.video.button.confirm.background.color" format="reference|color" /> <!-- 提交按钮的背景颜色 - 深色 -->
    <attr name="preview.video.button.confirm.background.progress.color" format="reference|color" /> <!-- 提交按钮的背景颜色 - 浅色 -->
    <attr name="preview.video.button.confirm.icon.complete" format="reference|color" /> <!-- 提交按钮的完成时图标 -->
    <attr name="preview.video.button.confirm.icon.error" format="reference|color" /> <!-- 提交按钮的失败时图标 -->
    <!-- endregion -->


    <!-- region 专辑下拉选项框的样式 -->
    <!-- endregion -->

    <!-- region 专辑下拉选项框的样式 -->
    <declare-styleable name="album.listPopupWindowStyle">
        <attr name="album.backgroundStyle" format="reference"/> <!-- 专辑选项的背景样式 -->
        <attr name="album.checkDotStyle" format="reference" /> <!-- 专辑选中时候的样式 -->
        <attr name="album.textColor" format="reference" /> <!-- 专辑字体颜色 -->
        <attr name="album.textSize" format="dimension" /> <!-- 专辑字体大小 -->
        <attr name="album.arrow.up.icon" format="reference" /> <!-- 上箭头 -->
        <attr name="album.arrow.down.icon" format="reference" /> <!-- 下箭头 -->
    </declare-styleable>
    <!-- endregion -->

    <!-- region 底部 TabLayout 有关样式 -->
    <declare-styleable name="main.tabLayout">
        <attr name="tabLayout.bg.zjh" format="reference|color" /> <!-- 底部背景颜色 -->
        <attr name="tabLayout.unselected.textColor" format="reference|color" /> <!-- 未选择时.文本颜色 -->
        <attr name="tabLayout.selected.textColor" format="reference|color" /> <!-- 选择时.文本颜色 -->
    </declare-styleable>
    <!-- endregion -->

    <!-- region 拍照录像相关属性 -->

    <declare-styleable name="OperationButtonZhongjh">
        <!-- 操作类型的按钮 -->
        <attr name="operationButtonZhongjhType">
            <enum name="cancel" value="0" />
            <enum name="confirm" value="1" />
        </attr>
    </declare-styleable>

    <!-- endregion -->


    <declare-styleable name="MaskProgressLayoutZhongjh">

        <attr name="isOperation" format="boolean"/><!-- 是否允许操作 -->
        <attr name="authority" format="string" /><!-- provider的authorities,用于提供给外部的file -->
        <attr name="columnNumber" format="integer" /><!-- 一行多少列 -->
        <attr name="columnSpace" format="integer" /><!-- 列与列之间多少间隔px单位 -->
        <attr name="album.thumbnail.placeholder" format="reference|color" /> <!-- 默认图片，颜色 -->
        <attr name="maxCount" format="integer" /> <!-- 只能显示多少个图片包括视频、语音 -->
        <attr name="imageEngine" format="string"/> <!-- 显示图片的类 -->
        <attr name="imageAddDrawable" format="reference"/> <!-- 显示添加的图片 -->
        <attr name="imageDeleteColor" format="color"/><!-- 图片视频文件的删除按钮颜色 -->
        <attr name="imageDeleteDrawable" format="reference"/><!-- 图片视频文件的删除按钮图片 -->

        <attr name="audioDeleteColor" format="color"/><!-- 音频文件的删除按钮颜色 -->
        <attr name="audioProgressColor" format="color"/><!-- 音频文件的进度条颜色 -->
        <attr name="audioPlayColor" format="color"/><!-- 音频文件的播放按钮颜色 -->

        <!-- 遮罩层 -->
        <attr name="maskingColor" format="color"/><!-- 遮罩颜色，默认用主颜色 -->
        <attr name="maskingTextSize" format="integer"/><!-- 显示在遮罩层的字体大小 -->
        <attr name="maskingTextColor" format="color"/><!-- 显示在遮罩层的字体颜色 -->
        <attr name="maskingTextContent" format="string"/><!-- 显示在遮罩层加载中的文字 -->

    </declare-styleable>


</resources>